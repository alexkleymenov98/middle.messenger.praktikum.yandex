form
    .form-container-content
        .form-container__fields
            each input in [email, login, first_name, second_name, display_name, phone, password, oldPassword, newPassword, confirm, title, user_id]
                if(input)
                    div !{input}
            if(errorTextForm)
                .error-text
                    span=errorTextForm
        .form-container__buttons
            input(type="submit", value=submitName, class="input-field-submit")
            div !{link}
